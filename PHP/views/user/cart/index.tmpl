<div id="cart-list">
    <div class="wrapper">
        <div id="cart_wrapper"></div>

     <div class="col-md-12 cart-actions">
            <div class="row cart-buttons">
                <button class="btn btn-lg btn-default col-md-3 cart-clear">CLEAR SHOPPING CART</button>
                <a href="/shop" class="btn btn-lg btn-default col-md-3 pull-right">CONTINUE SHOPPING</a>
            </div>
            <div class="row">
                <div class="col-md-4 checkout-box">
                    <div class="row">
                        <div class="chk-title">SHIPPING ADDRESS</div>
                        <div class="form-group">
                            <label for="country" class="sr-only">Country</label>
                            <input type="text" class="input-lg form-control" id="country" placeholder="Bangladesh">
                        </div>
                        <div class="form-group">
                            <label for="state" class="sr-only">Country</label>
                            <input type="text" class="input-lg form-control" id="state" placeholder="State">
                        </div>
                        <div class="form-group">
                            <label for="postcode" class="sr-only">Country</label>
                            <input type="text" class="input-lg form-control" id="postcode" placeholder="Postcode/Zip">
                        </div>
                    </div>
                </div>
                <div class="col-md-4 checkout-box">
                    <div class="chk-title">COUPON DISCOUNT</div>
                    <small>Enter your coupon code here if u have one</small>
                    <div class="form-group">
                        <label for="state" class="sr-only">Country</label>
                        <input type="text" class="input-lg form-control" id="state" placeholder="State">
                    </div>
                    <button class="btn btn-default">APPLY COUPON</button>
                </div>
                <div class="col-md-4 text-right checkout-box">
                    <div>
                        <div class="chk-text-right">
                            <small>SUB TOTAL <i class="fa fa-usd" aria-hidden="true"></i><span id="subtotal"></span></small>
                            <p class="chk-grandtotal">GRAND TOTAL <span class="pink"><i class="fa fa-usd" aria-hidden="true"></i><span id="grandtotal"></span></span></p>
                        </div>
                        <div class="devider-wide2"></div>
                        <button class="btn btn-danger btn-lg col-xs-12">PROCESS TO CHECKOUT</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-default">GET A QUOTE</button>
            </div>

        </div>
</div>
    </div>

