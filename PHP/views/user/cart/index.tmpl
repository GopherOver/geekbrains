{% include "/partials/blocks/breadcrumbs-block.tmpl" %}

<div id="cart-list">
    <div class="wrapper">

        <table class="table table-responsive cart-table">
            <thead>
                <tr>
                    <th>PRODUCT DETAILS</th>
                    <th>UNITE PRICE</th>
                    <th>QUANTITY</th>
                    <th>SHIPPING</th>
                    <th>SUBTOTAL</th>
                    <th>ACTION</th>
                </tr>
            </thead>
            <tbody>
            {% for product in user.cart.cart_items %}
                <tr>
                    <th>
                        <div class="cart-image">
                            <img src="/img/{{ product.img_src }}" alt="" class="cart-image">
                        </div>
                        <div class="cart-details">
                            <h5>{{ product.name }}</h5>
                            <p>Color: {{ product.color }}</p>
                            <p>Size: {{ product.size }}</p>
                        </div>
                    </th>
                    <th><i class="fa fa-usd" aria-hidden="true"></i>{{ product.product_price|number_format(2, '.', ',') }}</th>
                    <th>{{ product.amount }}</th>
                    <th>FREE</th>
                    <th>{{ product.amount * product.product_price }}</th>
                    <th><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></th>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="col-md-12">
            <div class="row">
                <button class="btn btn-default col-md-3">CLEAR SHOPPING CART</button>
                <button class="btn btn-default col-md-3 pull-right">CONTINUE SHOPPING</button>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="row">
                        <div class="chk-title">SHIPPING ADDRESS</div>
                        <div class="form-group">
                            <label for="country" class="sr-only">Country</label>
                            <input type="text" class="form-control" id="country" placeholder="Bangladesh">
                        </div>
                        <div class="form-group">
                            <label for="state" class="sr-only">Country</label>
                            <input type="text" class="form-control" id="state" placeholder="State">
                        </div>
                        <div class="form-group">
                            <label for="postcode" class="sr-only">Country</label>
                            <input type="text" class="form-control" id="postcode" placeholder="Postcode/Zip">
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="chk-title">COUPON DISCOUNT</div>
                    <small>Enter your coupon code here if u have one</small>
                    <div class="form-group">
                        <label for="state" class="sr-only">Country</label>
                        <input type="text" class="form-control" id="state" placeholder="State">
                    </div>
                    <button class="btn btn-default">APPLY COUPON</button>
                </div>
                <div class="col-md-4 text-right">
                    <div class="row">
                        <div class="chk-text-right">
                            <div class="chk-subtotal">SUB TOTAL $900</div>
                            <div class="chk-grandtotal">GRAND TOTAL <span class="pink">$900</span></div>
                        </div>
                        <div class="devider-wide2"></div>
                        <button class="btn btn-danger btn-lg">PROCESS TO CHECKOUT</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <button class="btn btn-default">GET A QUOTE</button>
            </div>

        </div>

    </div>
</div>

{% include "/partials/blocks/subscribe-block.tmpl" %}

